@using AnyarMVC.Models
@model List<Team>
<div class="container">
<table class="table">
    <h3>Team</h3>
            <a class="btn btn-primary" asp-action="Create" asp-controller="Team">Create</a>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Fullname</th>
            <th scope="col">Profession</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Profession</td>
                        <td>@item.Description</td>
                        <td>
                            <div width="50px"> 
                                <img width="50%" src="~/Upload/Teams/@item.ImgUrl">
                            </div>
                        </td>
                        <td>
                            <a class="btn btn-secondary" asp-action="Update" asp-controller="Team" asp-route-id=@item.Id>Update</a>
                    </td>
                            <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Team" asp-route-id=@item.Id>Delete</a>
                        </td>
                    </tr>
                }

    </tbody>
</table>
</div>